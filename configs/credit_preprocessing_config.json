{
    "input_path": "archive/UCI_Credit_Card.csv",
    "output_dir": "processed_data",
    "preprocessing": {
        "test_size": 0.2,
        "random_state": 42,
        "n_jobs": -1,
        "memory_threshold": 0.8,
        "save_intermediates": true,
        "output_formats": ["csv", "parquet"],
        "chunk_size": 5000
    },
    "visualization": {
        "output_dir": "processed_data/visualizations",
        "save_plots": true,
        "plot_formats": ["png"],
        "figure_size": [12, 8],
        "dpi": 300
    },
    "feature_engineering": {
        "create_utilization_features": true,
        "create_payment_features": true,
        "create_demographic_features": true,
        "create_financial_stress_features": true,
        "create_trend_features": true
    },
    "data_quality": {
        "handle_outliers": true,
        "outlier_method": "iqr",
        "outlier_threshold": 1.5,
        "imputation_strategy": {
            "numeric": "median",
            "categorical": "most_frequent"
        }
    },
    "scaling": {
        "method": "robust",
        "exclude_columns": ["SEX", "EDUCATION", "MARRIAGE"]
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(levelname)s - %(message)s"
    }
}
